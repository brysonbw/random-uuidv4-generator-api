{
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"]
  },
  "imports": {
    "hono": "https://deno.land/x/hono@v4.0.8/mod.ts",
    "hono/middleware": "https://deno.land/x/hono@v4.0.8/middleware.ts",
    "std/": "https://deno.land/std@0.218.2/"
  },
  "tasks": {
    "start": "deno run --allow-net src/index.ts",
    "dev": "deno fmt && deno run  --allow-net --allow-read --watch src/index.ts"
  }
}
